---
export interface Props {
  title: string;
  description: string;
  url: string;
}

const {title, description, url} = Astro.props as Props;
---
<article class="border-2 border-solid border-gray-50 rounded-xl shadow-sm shadow-blue-100 hover:shadow-blue-300 p-4 mx-4">
  <a href={url}>
    <h3 class="text-lg text-gray-500">{title}</h3>
  </a>
  <p class="leading-tight text-gray-300">{description}</p>
</article>